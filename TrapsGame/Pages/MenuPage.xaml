<Page
    x:Class="TrapsGame.Pages.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TrapsGame.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MenuPage"
    d:DesignHeight="800"
    d:DesignWidth="800"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid>


        <Button
            x:Name="ButtonPlay"
            Width="228"
            Height="52"
            Margin="0,348,0,0"
            VerticalAlignment="Top"
            Content="Играть"
            FontSize="35" Click="ButtonPlay_Click" />
        <Button
            x:Name="ButtonSettings"
            Width="228"
            Height="52"
            Margin="0,419,0,0"
            VerticalAlignment="Top"
            Content="Настройки"
            FontSize="35" />
        <TextBlock x:Name="RecordTextBlock"
            Width="780"
            Height="103"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Лучший результат — 0"
            TextWrapping="Wrap" FontSize="35" />

    </Grid>
</Page>
